{
  "name": "sustainability-iot-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "IoT Monorepo for Raspberry Pi, M5Stack, Dashboard, and AI",
  "workspaces": [
    "apps/api",
    "apps/dashboard"
  ],
  "scripts": {
    "dev": "echo 'Select a specific app to run'",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=apps/api",
    "build:dashboard": "npm run build --workspace=apps/dashboard",
    "lint": "npm run lint --workspaces",
    "lint:api": "npm run lint --workspace=apps/api",
    "lint:dashboard": "npm run lint --workspace=apps/dashboard",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "keywords": [
    "iot",
    "monorepo",
    "raspberry-pi",
    "m5stack",
    "dashboard",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
